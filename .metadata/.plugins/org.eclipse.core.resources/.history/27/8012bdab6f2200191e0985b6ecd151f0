package application;

public enum MessageBoxIcon {
	Information("StatusInformation_64x.png"), Warning("StatusWarning_64x.png"), Alert(
			"StatusAlert_64x.png"), CriticalError("StatusCriticalError_64x.png");

	private String[] text = new String[3];
	private int count;

	MessageBoxIcon(String... msg) {
		for (int i = 0; i < msg.length; ++i)
			text[i] = msg[i];
		count = msg.length;
	}

	@Override
	public String toString() {
		return text[0];
	}

	public String getText(int i) {
		return text[i];
	}

	public int getCount() {
		return count;
	}

}
